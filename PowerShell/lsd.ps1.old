# formats the CreationTime as date-only
# foreach ($d in $dirs) { "{0:d} {1,-16} {2,8}" -f $d.CreationTime, $d.length, $d.name }


# This looks like desired result.
function lsd { param ($p = ".")
    write-host $p -foregroundcolor yellow
    gci -Path $p | sort CreationTime | select Mode, CreationTime,Name,Length | `
        format-table Mode, `
        @{n="CreationDate";e={"{0:d}" -f $_.CreationTime}}, Length, Name -autosize
}


